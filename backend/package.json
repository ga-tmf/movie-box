{
  "name": "nest-backend",
  "version": "1.0.0",
  "description": "Movie Box Backend API",
  "author": "Gassan",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "nest build",
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "start:prod": "node dist/main.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config jest.e2e.js",
    "seed": "ts-node src/core/database/seeds/seed.ts",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/core/database/data-source.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/core/database/data-source.ts",
    "prepare": "husky install",
    "docker:dev": "docker-compose up --build",
    "docker:dev:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:logs": "docker-compose logs -f backend"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/swagger": "^7.1.0",
    "@nestjs/typeorm": "^10.0.0",
    "@nestjs/passport": "^10.0.0",
    "@nestjs/cache-manager": "^2.0.0",
    "cache-manager-redis-store": "^3.0.0",
    "class-validator": "^0.14.0",
    "class-transformer": "^0.5.1",
    "rxjs": "^7.8.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "typeorm": "^0.3.20",
    "pg": "^8.11.3",
    "redis": "^4.6.0",
    "reflect-metadata": "^0.1.13",
    "bcrypt": "^5.1.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "@nestjs/jwt": "^10.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.0",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.0.0",
    "@types/node": "^20.10.0",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/multer": "^1.4.11",
    "@types/jest": "^29.5.5",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "prettier": "^3.1.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "husky": "^9.0.7",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
